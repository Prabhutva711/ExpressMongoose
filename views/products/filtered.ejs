<body>

   <% for(product of products) {%>
    <%if(product.category==category){%>
    <ul class="list-group">

        <a href="/products/<%=product.id%>"><li class="list-group-item active" style="margin: 20px; text-align: center;"><%=product.name%></li></a>   
        <a href="/products/edit/<%=product.id%>"><input class="btn btn-primary" type="reset" value="Reset"></a>
        <form action="products/delete/<%=product.id%>?_method=DELETE", method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>            
    </ul>  
    <%}%>     
   <% }%>  
   <a href="/products/new" style="margin:40rem"><button type="button" class="btn btn-primary" style="margin:auto">Create Product</button></a>
</body>
